{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":semanticCommitTypeAll(deps)"
    ],
    "platformAutomerge": true,
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "automergeType": "pr",
        "platformAutomerge": true
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "labels": [
                "type: deps"
            ]
        },
        {
            "matchFileNames": [
                "docs/**"
            ],
            "commitMessagePrefix": "chore",
            "commitMessageAction": "update",
            "commitMessageTopic": "docs dependencies",
            "labels": [
                "type: docs",
                "type: deps"
            ]
        }
    ]
}
